{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "outDir": "build",
    "lib": [
      "es2018", "esnext", "dom"
    ],
    "baseUrl": "src"
  },
  "exclude": ["dist", "build", "node_modules"]
}
