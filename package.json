{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "all": "yarn run reinitialize && yarn run build && yarn run lint && yarn run test && yarn run coverage",
    "reinitialize": "yarn run clean:all && yarn audit && yarn install && yarn run bootstrap",
    "full-build": "yarn run reinitialize && yarn run build && yarn run lint && yarn run coverage",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "clean": "lerna run clean && lerna clean -y",
    "clean:all": "lerna run clean:all && lerna clean -y && rm -Rf node_modules",
    "version": "lerna version",
    "publish": "lerna publish from-git",
    "ls": "lerna ls",
    "sample:start": "lerna run start",
    "core": "yarn workspace mobx-binder-core",
    "main": "yarn workspace mobx-binder",
    "dayjs": "yarn workspace mobx-binder-dayjs",
    "moment": "yarn workspace mobx-binder-moment",
    "site": "yarn workspace site",
    "sample": "yarn workspace sample"
  },
  "resolutions": {
    "got": "^11.8.5",
    "parse-path": "^5.0.0"
  },
  "devDependencies": {
    "improved-yarn-audit": "^3.0.0",
    "lerna": "^5.5.4",
    "turbo": "^1.8.5"
  },
  "packageManager": "yarn@3.5.0"
}
